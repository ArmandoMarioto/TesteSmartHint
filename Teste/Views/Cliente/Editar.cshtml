@{
    ViewData["Title"] = "Editar um cliente";
}

<div class="text-center">
    <h1 class="display-4">Editar cliente</h1>
</div>


<form>
  <div class="mb-3">
    <label for="name" class="form-label">Nome</label>
    <input type="text" class="form-control" placeholder='Digite seu nome' >
  </div>

  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input type="email" class="form-control" placeholder='Digite seu email' >
  </div>

  <div class="mb-3">
    <label for="telefone" class="form-label">Telefone</label>
    <input type="text" class="form-control" placeholder='Digite seu telefone'>
  </div>
  <div class="d-grid gap-2">
  <button type="submit" class="btn btn-primary">Alterar</button>

  <a class='btn btn-secondary' asp-controller='Cliente' asp-action='Index'>Voltar</a>
  </div>
</form>