@{
    ViewData["Title"] = "Criar um cliente";

}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.11/jquery.mask.min.js"></script>
  <script type="text/javascript">
    $("#telefone").mask("(00) 0000-0000");
    </script>
<div class="text-center">
    <h1 class="display-4">Cadastrar cliente</h1>
</div>

<form>
  <div class="mb-3">
    <label for="name" class="form-label"
    data-bs-toggle="tooltip" data-bs-placement="right" title="Nome completo ou Razão Social do Cliente.*"
    >Nome do Cliente/Razão Social:</label>
    <input type="text" class="form-control"
    pattern="/[a-zA-Z0-9]+/" 
    maxlength="150"
     required>
  </div>

  <div class="mb-3">
    <label for="email" class="form-label"
    data-bs-toggle="tooltip" data-bs-placement="right" title="E-mail do Cliente.">E-Mail:*</label>
    <input type="email" class="form-control"
    pattern="/[a-zA-Z0-9]+/"
     maxlength="150"
    required>
  </div>
    
  <div class="mb-3">
    <label for="telefone" class="form-label"
    data-bs-toggle="tooltip" data-bs-placement="right" title="Telefone do Cliente.">Telefone*</label>
    <input type="text" class="form-control" id="telefone" placeholder='(##)#####-####' title="Telefone do Cliente"
    pattern="\([0-9]{2}\)[0-9]{5,6}-[0-9]{5,6}$" required>
  </div>

  <div class="mb-3">
    <label for="telefone" class="form-label">Data</label>
    <input type="text" class="form-control .date-mask" value=@DateTime.Now readonly>
  </div>

  <div class="text-center">
    <h1 class="display-4">Informações Pessoais</h1>
</div>
    <label for="tipo" class="form-label">Tipo de Pessoa:*</label>
  <select id='tipo' class="form-select form-select-lg mb-3" aria-label=".form-select-lg example"
      data-bs-toggle="tooltip" data-bs-placement="right" title="Selecione o tipo de Pessoa." required>
      <option value="1" selected>Física</option>
      <option value="2">Jurídica</option>
</select>

  <div class="mb-3">
    <label for="cpf" class="form-label"
    data-bs-toggle="tooltip" data-bs-placement="right" title="Insira o CPF ou o CNPJ do Cliente.">CPF</label>
    <input type="text" class="form-control .cpf-mask" id="cpf"
    pattern="^\d{3}\.\d{3}\.\d{3}-\d{2}$" required>
  </div>
  
  <div class="mb-3">
    <label for="Estadual" class="form-label"
    data-bs-toggle="tooltip" data-bs-placement="right" title="Inscrição Estadual do Cliente, selecionar Isento caso assim for.">
    Inscrição Estadual:</label>
    <input type="text" class="form-control" placeholder='###.###.###-###' 
    pattern="^\d{3}\.\d{3}\.\d{3}-\d{2}$" required>
  </div>

  <div class="mb-3">
  <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
  <label class="form-check-label" for="flexCheckDefault">
    Isento
  </label>
</div>

<label for="genero" class="form-label"
data-bs-toggle="tooltip" data-bs-placement="right" title="Selecione o gênero do Cliente.">Gênero:*</label>
  <select id='genero' class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
      <option value="1" selected>Feminino</option>
      <option value="2">Masculino</option>
      <option value="3">Outro</option>
</select>

  <div class="mb-3">
    <label for="nascimento" class="form-label">Data de Nascimento</label>
    <input type="date" class="form-control" placeholder='Digite seu telefone' required>
  </div>

   <div class="mb-3">
  <input class="form-check-input" type="checkbox" value="" id="bloqueadoCheck"
  data-bs-toggle="tooltip" data-bs-placement="right" title="Bloqueio o acesso do Cliente na sua Loja.">
  <label class="form-check-label" for="bloqueadoCheck">
    Bloqueado
  </label>
</div>

  <div class="mb-3">
    <label for="senha" class="form-label">Senha de Acesso:*</label>
    <input type="password" class="form-control"
    maxlength='15'
    min='8'
    required>
  </div>

  <div class="mb-3">
    <label for="confirmacaoSenha" class="form-label">Confirmação da Senha de Acesso:*</label>
    <input type="password" class="form-control"
    maxlength='15'
    min='8'
    required>
  </div>

  <div class="d-grid gap-2">
  <button type="submit" class="btn btn-primary ">Adicionar</button>

  <a class='btn btn-secondary' asp-controller='Cliente' asp-action='Index'>Voltar</a>
  </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function ()
        {
            $("#telefone").inputmask("mask", { "mask": "(99) 9999-99999" });
            $("#cpf").inputmask("mask", { "mask": "999.999.999-99" }, {reverse:true});
            $("#cep").inputmask("mask", { "mask": "99999-999" });
            $("#nascimento").inputmask("mask", { "mask": "99/99/9999" });
            $("#preco").inputmask("mask", { "mask": "999.999,99" }, { reverse: true });
            $("#valor").inputmask("mask", { "mask": "#.##9,99" }, { reverse: true });
            $("#ip").inputmask("mask", { "mask": "999.999.999.999" });
    });
    </script>
}