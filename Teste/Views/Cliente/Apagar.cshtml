@model ClienteModel
@{
    ViewData["Title"] = "Apagar um cliente";
}

<div class="text-center">
    <h1 class="display-4">Realmente deseja apagar o cliente(@Model.Name)</h1>
</div>

  <div class="d-grid gap-2">
  <a type="submit" class="btn btn-danger"  asp-route-id='@Model.Id' asp-controller='Cliente' asp-action='ApagarConfirmacao'>Confirmar exclusão</a>

  <a class='btn btn-primary' asp-controller='Cliente' asp-action='Index'>Cancelar exclusão</a>
  </div>
